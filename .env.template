# UXR Synthesizer Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Alternative Transcription Services with Diarization
# Choose based on your needs:

# AssemblyAI (Recommended for diarization)
# - Best balance of quality, cost, and ease of use
# - $0.37/hour, excellent speaker separation
# - Get key at: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_assemblyai_key_here

# ElevenLabs (Voice analysis focused)
# - $0.40/hour, includes emotion/sentiment analysis
# - Best for voice characteristics and emotion detection
# - Get key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# AWS Transcribe (Enterprise option)
# - Most comprehensive features
# - Requires AWS account and S3 setup
# - Higher complexity but enterprise-grade
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_REGION=us-east-1

# Azure Speech (Microsoft option) 
# - Good integration with Microsoft ecosystem
# - Moderate complexity and cost
AZURE_SPEECH_KEY=your_azure_key_here
AZURE_REGION=eastus

# Whisper Configuration (for local transcription)
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large

# AWS Configuration (for speaker diarization)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# Azure Speech Services (alternative for diarization)
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-region

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5001
MAX_FILE_SIZE=25  # MB

# Transcription Service Selection
# Options: whisper, openai-api, aws-transcribe, azure-speech
TRANSCRIPTION_SERVICE=whisper

# Feature Flags
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_BATCH_PROCESSING=false
ENABLE_AUDIO_PREVIEW=false